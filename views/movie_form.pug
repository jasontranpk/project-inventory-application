extends layout 

block content 
    h1= title 

    form(method='POST' action='')
        div.form-group
            label(for='title') Title: 
            input#title.form-control(type='text', placeholder='Lord of The Ring...' name='title' value=(movie ===undefined?'': movie.title), required = true)
        div.form-group
            label(for='description') Description: 
            input#description.form-control(type='text', placeholder='A movie about 2 brothers...' name='description' value=(movie ===undefined?'': movie.description), required = true)
        div.form-group
            label Genre:
            div
                for genre in genres
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
                        label(for=genre._id) #{genre.name}
        div.form-group
            label(for='price') Price: 
            input#description.form-control(type='text', placeholder='$12' name='price' value=(movie ===undefined?'': movie.price), required = true)
        div.form-group
            label(for='number_in_stock') Number In Stock: 
            input#number_in_stock.form-control(type='text', placeholder='21' name='number_in_stock' value=(movie ===undefined?'': movie.number_in_stock), required = true)
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg