extends layout 

block content 
    h1 Genre: #{genre.name}

    if genre_movies.length

        p #[strong Delete the following movies before attempting to delete this genre]

        div(style='margin-left:20px;margin-top:20px')

        h4 Movies 
        dl 
            each movie in genre_movies
                dt 
                    a(href=movie.url) #{movie.title}
                dd #{movie.description}
    else 
        p Do you really want to delete this Genre 

        form(method='POST' action='')
            .form-group 
                input#genreId.form-control(type='hidden', name='genreId', required='true', value=genre._id)
            button.btn.btn-primary(type="submit") Delete